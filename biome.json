{
  "$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useValidAriaProps": "warn",
        "useValidAriaValues": "warn",
        "noAriaUnsupportedElements": "warn",
        "useAriaPropsForRole": "warn",
        "useAltText": "warn",
        "noBlankTarget": "off"
      },
      "style": {
        "noParameterAssign": "warn",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "warn",
        "noArrayIndexKey": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "ignore": [
      "node_modules/",
      "apps/website/.next/",
      "apps/website/src/data/generated",
      "apps/website/out",
      "apps/website/src/third-party/qrcodegen/index.ts",
      "pnpm-lock.yaml"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  }
}

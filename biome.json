{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "files": {
    "ignore": [
      "node_modules/",
      "apps/website/.next/",
      "apps/website/out/",
      "apps/website/public/",
      "apps/website/src/data/generated/",
      "apps/website/src/third-party/qrcodegen/index.ts",
      "pnpm-lock.yaml"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useValidAriaProps": "warn",
        "useValidAriaValues": "warn",
        "noAriaUnsupportedElements": "warn",
        "useAriaPropsForRole": "warn",
        "useAltText": "warn",
        "noBlankTarget": "off",
        "useKeyWithClickEvents": "off",
        "noSvgWithoutTitle": "warn",
        "useValidAnchor": "warn"
      },
      "style": {
        "noParameterAssign": "warn",
        "useNodejsImportProtocol": "off",
        "noArguments": "warn",
        "noNonNullAssertion": "warn",
        "useImportType": "warn"
      },
      "suspicious": {
        "noImplicitAnyLet": "warn",
        "noExplicitAny": "warn",
        "noAssignInExpressions": "warn",
        "noArrayIndexKey": "warn",
        "noAsyncPromiseExecutor": "warn"
      },
      "correctness": {
        "useJsxKeyInIterable": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "defaultBranch": "main",
    "useIgnoreFile": true
  }
}
